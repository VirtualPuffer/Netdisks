<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.virtualpuffer.netdisk.mapper.FileHashMap">

    <select id="checkDuplicate" resultType="com.virtualpuffer.netdisk.entity.FileHash_Map">
        select * from FileHash_Map where hash = #{hash};
    </select>

    <insert id="insertMap">
        insert into File_Map (USER_ID,File_Name,File_Path,File_Hash)
        select File_path as File_Path,
               #{userID}as USER_ID,
               #{fileName} as File_Name,
               #{fileHash} as File_Hash from File_Map where File_Hash = #{fileHash};
    </insert>

    <insert id="addHashMap">
        insert into FileHash_Map (File_Hash,File_Path,USER_ID) values (#{hash},#{path},#{userID});
    </insert>
    <select id="getFileMapByHash" resultType="com.virtualpuffer.netdisk.entity.FileHash_Map">
        select * from FileHash_Map where File_Hash = #{hash};
    </select>
    <select id="getFileMapByPath" resultType="com.virtualpuffer.netdisk.entity.FileHash_Map">
        select * from FileHash_Map where File_Path = #{path};
    </select>


</mapper>